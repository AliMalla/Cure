<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/white_background_with_corners"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/recipeImageMain"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="142dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/recipeNameMain"
        android:layout_width="285dp"
        android:layout_height="53dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:text="Naomi Duguid's Fish Cakes and Fish Balls"
        android:textColor="#151414"
        android:textSize="20sp"
        android:textStyle="bold"
        android:typeface="sans"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeImageMain" />

    <TextView
        android:id="@+id/recipeCaloriesMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="50dp"
        android:text="TextView"
        android:textColor="#AE342B"
        android:textColorHighlight="#B55436"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/recipeFatMain"
        app:layout_constraintTop_toBottomOf="@+id/recipeNameMain" />

    <TextView
        android:id="@+id/recipeTimeMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:text="TextView"
        android:textColor="#8A6C6C"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeNameMain" />

    <TextView
        android:id="@+id/recipeTotalServingsMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginEnd="40dp"
        android:text="TextView"
        android:textColor="#8A6C6C"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/recipeCarbsMain"
        app:layout_constraintTop_toBottomOf="@+id/recipeCaloriesMain" />

    <TextView
        android:id="@+id/recipeProteinMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textColor="#297BBC"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeImageMain" />

    <TextView
        android:id="@+id/recipeFatMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textColor="#DC3F0E"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeProteinMain" />

    <TextView
        android:id="@+id/recipeCarbsMain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="20dp"
        android:text="TextView"
        android:textColor="#FF9800"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/recipeFatMain" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="129dp"
        app:layout_constraintEnd_toStartOf="@+id/recipeCarbsMain"
        app:layout_constraintTop_toBottomOf="@+id/recipeCaloriesMain" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toStartOf="@+id/recipeTimeMain"
        app:layout_constraintTop_toBottomOf="@+id/recipeNameMain"
        app:srcCompat="@mipmap/time_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>